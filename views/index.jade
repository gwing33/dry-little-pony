extends layout

block content
  h2 Complete the Following Mad Lib...
  div(class='madlib-box')
    div(class='enter-user-name')
      h3 Please Enter a Username
      input(type='text', placeholder='Enter a Username', id='username')
      input(type='button', value='Next')
    div(class='loading')
      | Please Wait you Dry Little Pony...

  div(class='active-users')

  script(id='snippet', type='text/x-handlebars-template')
    |<div class='madlib-snippet'>
    |  <p>
    |    {{snippet}}
    |  </p>
    |  <input type='button', value='Continue &raquo;'>
    |</div>

  script(id='complete', type='text/x-handlebars-template')
    |<div class='madlib-complete'>
    |  <p>
    |   {{complete}}
    |  </p>
    |  <input type='button', value='Restart'>
    |</div>

  script(id='active_users', type='text/x-handlebars-template')
    | Active Users: 
    | {{#each users}}
    |   <span>{{this}}</span>
    | {{/each}}

  script(src='/socket.io/socket.io.js')
  script(src='//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js')
  script(src='/javascripts/handlebars.js')
  script(src='/javascripts/main.js')